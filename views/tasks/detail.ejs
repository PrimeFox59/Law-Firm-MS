<%- include('../partials/header') %>

<div class="container-fluid p-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="mb-1"><i class="fas fa-tasks me-2"></i><%= task.title %></h2>
      <p class="text-muted mb-0"><%= task.description || 'No description' %></p>
    </div>
    <div class="d-flex align-items-center gap-2">
      <span class="badge bg-<%= task.priority === 'urgent' ? 'danger' : task.priority === 'high' ? 'warning' : 'info' %>"><%= task.priority %></span>
      <span class="badge bg-<%= task.status === 'completed' ? 'success' : task.status === 'in_progress' ? 'primary' : 'secondary' %>"><%= task.status.replace('_', ' ') %></span>
      <% if (user && task.creator && user.id === task.creator.id) { %>
        <button class="btn btn-success" onclick="updateStatus(<%= task.id %>, 'completed')">Approve</button>
        <button class="btn btn-outline-warning" onclick="updateStatus(<%= task.id %>, 'in_progress')">Start</button>
        <button class="btn btn-outline-danger" onclick="updateStatus(<%= task.id %>, 'pending')">Reject</button>
      <% } %>
      <a href="/tasks" class="btn btn-outline-secondary">Back</a>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-lg-6">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="mb-3">Details</h5>
          <p class="mb-2"><strong>Assignee:</strong> <%= task.assignee ? task.assignee.full_name : 'Unassigned' %> <%= task.assignee ? '(' + task.assignee.account_type + ')' : '' %></p>
          <p class="mb-2"><strong>Matter:</strong> <%= task.matter ? task.matter.matter_name : '-' %></p>
          <p class="mb-2"><strong>Start:</strong> <%= task.start_date || '-' %></p>
          <p class="mb-2"><strong>Due:</strong> <%= task.due_date || '-' %></p>
          <p class="mb-0"><strong>Creator:</strong> <%= task.creator ? task.creator.full_name : '-' %></p>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Documents</h5>
            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">Upload</button>
          </div>
          <% if (documents && documents.length) { %>
            <div class="table-responsive">
              <table class="table table-sm align-middle">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Uploaded</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% documents.forEach(doc => { %>
                    <tr>
                      <td><%= doc.name %></td>
                      <td><%= doc.mime_type %></td>
                      <td><%= new Date(doc.created_at).toLocaleString() %></td>
                      <td class="text-end">
                        <a href="/<%= doc.file_path %>" class="btn btn-sm btn-outline-primary" target="_blank" rel="noopener">Open</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <p class="text-muted mb-0">No documents yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Upload Document</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="POST" action="/tasks/<%= task.id %>/documents" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Select file</label>
            <input type="file" name="file" class="form-control" required>
          </div>
          <p class="text-muted" style="font-size:13px;">File will be tagged to this task (and its matter if present). Max size: 20MB.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Upload</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function updateStatus(id, status) {
  fetch(`/tasks/${id}/status`, {
    method: 'PATCH',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ status })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert(data.message || 'Not allowed');
    }
  });
}
</script>

<%- include('../partials/footer') %>
