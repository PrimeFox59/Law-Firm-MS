<%- include('../partials/header') %>

<div class="container-fluid p-4">
  <div class="mb-4">
    <a href="/tasks" class="btn btn-outline-secondary">
      <i class="fas fa-arrow-left me-2"></i>Back to Tasks
    </a>
  </div>

  <div class="card">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Add Task</h4>
    </div>
    <div class="card-body">
      <form method="POST" action="/tasks">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Task Type *</label>
            <select class="form-select" name="task_type" id="task_type" onchange="toggleMatter()" required>
              <option value="personal">Personal Task</option>
              <option value="matter">Matter Task</option>
            </select>
          </div>

          <div class="col-md-6 mb-3" id="matter_field" style="display:none;">
            <label class="form-label">Related Matter</label>
            <select class="form-select" name="matter_id">
              <option value="">Select Matter</option>
              <% matters.forEach(matter => { %>
                <option value="<%= matter.id %>"><%= matter.matter_name %></option>
              <% }); %>
            </select>
          </div>

          <div class="col-md-12 mb-3">
            <label class="form-label">Title *</label>
            <input type="text" class="form-control" name="title" required>
          </div>

          <div class="col-md-12 mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="3"></textarea>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
              <option value="pending">Pending</option>
              <option value="in_progress">In Progress</option>
              <option value="completed">Completed</option>
            </select>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Priority</label>
            <select class="form-select" name="priority">
              <option value="low">Low</option>
              <option value="medium" selected>Medium</option>
              <option value="high">High</option>
              <option value="urgent">Urgent</option>
            </select>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Assignee *</label>
            <select class="form-select" name="assignee_id" required>
              <% users.forEach(u => { %>
                <option value="<%= u.id %>" <%= u.id === user.id ? 'selected' : '' %>><%= u.full_name %></option>
              <% }); %>
            </select>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Start Date</label>
            <input type="date" class="form-control" name="start_date">
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Due Date</label>
            <input type="date" class="form-control" name="due_date">
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">
          <i class="fas fa-save me-2"></i>Create Task
        </button>
      </form>
    </div>
  </div>
</div>

<script>
function toggleMatter() {
  const taskType = document.getElementById('task_type').value;
  const matterField = document.getElementById('matter_field');
  matterField.style.display = taskType === 'matter' ? 'block' : 'none';
}
</script>

<%- include('../partials/footer') %>
