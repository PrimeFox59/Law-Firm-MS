<%- include('../partials/header') %>

<div class="container-fluid p-4">
  <div class="mb-4">
    <a href="/matters" class="btn btn-outline-secondary">
      <i class="fas fa-arrow-left me-2"></i>Back to Matters
    </a>
  </div>

  <div class="card">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Add Matter</h4>
    </div>
    <div class="card-body">
      <form method="POST" action="<%= action === 'edit' && matter ? '/matters/' + matter.id + '?_method=PUT' : '/matters' %>">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Matter Number *</label>
            <input type="text" class="form-control" name="matter_number" value="<%= matter ? matter.matter_number : '' %>" required>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Matter Name *</label>
            <input type="text" class="form-control" name="matter_name" value="<%= matter ? matter.matter_name : '' %>" required>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Client *</label>
            <select class="form-select" name="client_id" required>
              <option value="">Select Client</option>
              <% clients.forEach(client => { %>
                <option value="<%= client.id %>" <%= matter && matter.client_id === client.id ? 'selected' : '' %>><%= client.name %></option>
              <% }); %>
            </select>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Responsible Attorney *</label>
            <select class="form-select" id="responsibleAttorneys" name="responsible_attorney_ids[]" multiple required>
              <% const selectedAtts = matter && matter.responsibleAttorneys ? matter.responsibleAttorneys.map(a => a.id) : []; %>
              <% attorneys.forEach(attorney => { %>
                <option value="<%= attorney.id %>" <%= selectedAtts.includes(attorney.id) ? 'selected' : '' %>><%= attorney.full_name %></option>
              <% }); %>
            </select>
            <div class="form-text">Select one or more attorneys; the first selected becomes the lead.</div>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Case Area</label>
            <input type="text" class="form-control" name="case_area" value="<%= matter ? matter.case_area || '' : '' %>">
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Case Type</label>
            <input type="text" class="form-control" name="case_type" value="<%= matter ? matter.case_type || '' : '' %>">
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Dispute Resolution</label>
            <select class="form-select" name="dispute_resolution">
              <option value="">Select</option>
              <option value="litigation" <%= matter && matter.dispute_resolution === 'litigation' ? 'selected' : '' %>>Litigation</option>
              <option value="arbitration" <%= matter && matter.dispute_resolution === 'arbitration' ? 'selected' : '' %>>Arbitration</option>
              <option value="mediation" <%= matter && matter.dispute_resolution === 'mediation' ? 'selected' : '' %>>Mediation</option>
              <option value="negotiation" <%= matter && matter.dispute_resolution === 'negotiation' ? 'selected' : '' %>>Negotiation</option>
              <option value="other" <%= matter && matter.dispute_resolution === 'other' ? 'selected' : '' %>>Other</option>
            </select>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
              <option value="active" <%= matter && matter.status === 'active' ? 'selected' : '' %>>Active</option>
              <option value="pending" <%= matter && matter.status === 'pending' ? 'selected' : '' %>>Pending</option>
              <option value="closed" <%= matter && matter.status === 'closed' ? 'selected' : '' %>>Closed</option>
            </select>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Start Date</label>
            <input type="date" class="form-control" name="start_date" value="<%= matter && matter.start_date ? matter.start_date.toISOString().slice(0,10) : '' %>">
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">End Date</label>
            <input type="date" class="form-control" name="end_date" value="<%= matter && matter.end_date ? matter.end_date.toISOString().slice(0,10) : '' %>">
          </div>

          <div class="col-md-12 mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="4"><%= matter ? (matter.description || '') : '' %></textarea>
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">
          <i class="fas fa-save me-2"></i><%= action === 'edit' ? 'Update Matter' : 'Create Matter' %>
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Select2 assets for multi-select tagging -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const selectEl = $('#responsibleAttorneys');
    if (selectEl && selectEl.length) {
      selectEl.select2({
        placeholder: 'Select attorney(s)',
        width: '100%',
        closeOnSelect: false
      });
    }
  });
</script>

<%- include('../partials/footer') %>
