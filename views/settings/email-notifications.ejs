<%- include('../partials/header') %>

<div class="container-fluid p-4 page-content">
  <div class="d-flex align-items-center mb-3 gap-2">
    <i class="fas fa-envelope text-primary"></i>
    <h4 class="mb-0">Email Notifications</h4>
  </div>

  <div class="row g-3">
    <div class="col-lg-4">
      <div class="list-group shadow-sm">
        <a href="/settings/profile" class="list-group-item list-group-item-action">Profile Settings</a>
        <a href="/settings/security" class="list-group-item list-group-item-action">Security</a>
        <a href="/settings/notifications" class="list-group-item list-group-item-action">Notifications</a>
        <a class="list-group-item list-group-item-action active">Email Notifications</a>
        <a href="/settings/google" class="list-group-item list-group-item-action">Google Account</a>
        <a href="/settings/activity" class="list-group-item list-group-item-action">Activity Log</a>
        <a href="/settings/hierarchy" class="list-group-item list-group-item-action">Hierarchy</a>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="mb-3">
            <p class="text-muted mb-1">Kirim notifikasi lewat email untuk event yang diaktifkan.</p>
            <% if (!emailConfigured) { %>
              <div class="alert alert-warning mb-2">Email credential belum lengkap. Set EMAIL_USERNAME dan EMAIL_APP_PASSWORD di .env lalu restart server.</div>
            <% } %>
            <% if (emailUsername) { %>
              <div class="small text-muted">Email pengirim: <strong><%= emailUsername %></strong></div>
            <% } %>
          </div>

          <form method="POST" action="/settings/notifications/email" class="mb-4">
            <div class="list-group">
              <label class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold">Task perlu dilakukan</div>
                  <div class="text-muted small">Saat task baru ditugaskan ke Anda</div>
                </div>
                <div class="form-check form-switch mb-0">
                  <input class="form-check-input" type="checkbox" name="email_task_assigned" <%= user.email_task_assigned !== false ? 'checked' : '' %>>
                </div>
              </label>

              <label class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold">Due date &lt; 3 hari</div>
                  <div class="text-muted small">Pengingat tugas yang akan jatuh tempo</div>
                </div>
                <div class="form-check form-switch mb-0">
                  <input class="form-check-input" type="checkbox" name="email_task_due_soon" <%= user.email_task_due_soon !== false ? 'checked' : '' %>>
                </div>
              </label>

              <label class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold">Due date telat</div>
                  <div class="text-muted small">Pemberitahuan saat tugas melewati tenggat</div>
                </div>
                <div class="form-check form-switch mb-0">
                  <input class="form-check-input" type="checkbox" name="email_task_overdue" <%= user.email_task_overdue !== false ? 'checked' : '' %>>
                </div>
              </label>

              <label class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold">Task selesai</div>
                  <div class="text-muted small">Saat tugas yang Anda buat selesai</div>
                </div>
                <div class="form-check form-switch mb-0">
                  <input class="form-check-input" type="checkbox" name="email_task_completed" <%= user.email_task_completed !== false ? 'checked' : '' %>>
                </div>
              </label>

              <label class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold">Permintaan approval</div>
                  <div class="text-muted small">Saat Anda diminta menyetujui</div>
                </div>
                <div class="form-check form-switch mb-0">
                  <input class="form-check-input" type="checkbox" name="email_approval_request" <%= user.email_approval_request !== false ? 'checked' : '' %>>
                </div>
              </label>

              <label class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold">Hasil approval</div>
                  <div class="text-muted small">Saat permintaan Anda disetujui/ditolak</div>
                </div>
                <div class="form-check form-switch mb-0">
                  <input class="form-check-input" type="checkbox" name="email_approval_result" <%= user.email_approval_result !== false ? 'checked' : '' %>>
                </div>
              </label>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
              <button type="submit" class="btn btn-primary">Simpan Preferensi</button>
            </div>
          </form>

          <form method="POST" action="/settings/notifications/email/test">
            <div class="mb-3">
              <label class="form-label">Alamat email tujuan</label>
              <input type="email" class="form-control" name="email" value="<%= user.email || '' %>" placeholder="you@example.com" required>
              <div class="form-text">Bisa diubah sementara untuk uji kirim. Default mengambil email profil Anda.</div>
            </div>

            <div class="d-flex justify-content-end gap-2">
              <button type="submit" class="btn btn-outline-secondary" <%= emailConfigured ? '' : 'disabled' %>>Send Test Email</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
