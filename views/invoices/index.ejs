<%- include('../partials/header') %>

<div class="container-fluid p-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-file-invoice-dollar me-2"></i>Invoices</h2>
    <a href="/invoices/create" class="btn btn-primary">
      <i class="fas fa-plus me-2"></i>Create Invoice
    </a>
  </div>

  <!-- Filter -->
  <div class="card mb-4">
    <div class="card-body">
      <form method="GET" action="/invoices" class="row g-3">
        <div class="col-md-4">
          <input type="text" class="form-control" name="search" placeholder="Search invoice number..." value="<%= search %>">
        </div>
        <div class="col-md-3">
          <select class="form-select" name="status" onchange="this.form.submit()">
            <option value="all" <%= status === 'all' ? 'selected' : '' %>>All Status</option>
            <option value="draft" <%= status === 'draft' ? 'selected' : '' %>>Draft</option>
            <option value="sent" <%= status === 'sent' ? 'selected' : '' %>>Sent</option>
            <option value="partial" <%= status === 'partial' ? 'selected' : '' %>>Partial</option>
            <option value="paid" <%= status === 'paid' ? 'selected' : '' %>>Paid</option>
            <option value="overdue" <%= status === 'overdue' ? 'selected' : '' %>>Overdue</option>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-secondary w-100">
            <i class="fas fa-search me-2"></i>Search
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Invoices Table -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Invoice #</th>
              <th>Client</th>
              <th>Matter</th>
              <th>Issue Date</th>
              <th>Due Date</th>
              <th>Amount</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (invoices.length > 0) { %>
              <% invoices.forEach(inv => { %>
                <tr>
                  <td><strong><%= inv.invoice_number %></strong></td>
                  <td><%= inv.contact.name %></td>
                  <td><%= inv.matter ? inv.matter.matter_name : '-' %></td>
                  <td><%= moment(inv.issue_date).format('MMM DD, YYYY') %></td>
                  <td><%= moment(inv.due_date).format('MMM DD, YYYY') %></td>
                  <td>Rp <%= parseFloat(inv.total_amount).toLocaleString() %></td>
                  <td>
                    <span class="badge bg-<%= inv.status === 'paid' ? 'success' : inv.status === 'draft' ? 'secondary' : 'warning' %>">
                      <%= inv.status %>
                    </span>
                  </td>
                  <td>
                    <a href="/invoices/<%= inv.id %>" class="btn btn-sm btn-outline-info">
                      <i class="fas fa-eye"></i>
                    </a>
                    <% if (inv.status === 'draft') { %>
                      <button onclick="deleteInvoice(<%= inv.id %>)" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-trash"></i>
                      </button>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="8" class="text-center text-muted">No invoices found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
function deleteInvoice(id) {
  if (confirm('Delete this invoice?')) {
    fetch(`/invoices/${id}`, {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(res => res.json())
    .then(data => {
      if (data.success) location.reload();
      else alert(data.message);
    });
  }
}
</script>

<%- include('../partials/footer') %>
