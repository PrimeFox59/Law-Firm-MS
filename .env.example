# Server Configuration
HOST=0.0.0.0
PORT=3000
NODE_ENV=development

# Session Secret
SESSION_SECRET=your-secret-key-here-change-in-production

# Database
DATABASE_PATH=./database/lawfirm.db

# App Base URL (used in emails/links)
APP_BASE_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Firebase (Firestore / Storage)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Use \n for newlines or provide base64 via FIREBASE_SERVICE_ACCOUNT_BASE64
FIREBASE_PRIVATE_KEY=
FIREBASE_SERVICE_ACCOUNT_BASE64=
FIREBASE_STORAGE_BUCKET=

# Email (SMTP)
EMAIL_USERNAME=
EMAIL_APP_PASSWORD=
# Optional legacy password fallback
EMAIL_PASSWORD=
EMAIL_FROM=

# Upload Settings
MAX_FILE_SIZE=5368709120
UPLOAD_DIR=./uploads

# WhatsApp Notifications
# Set to false to disable WhatsApp notifications (useful if having Chromium/Puppeteer issues on Windows)
ENABLE_WHATSAPP=true